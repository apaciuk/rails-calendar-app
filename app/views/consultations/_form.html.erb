<%= form_with(model: consultation) do |form| %>
  <% if consultation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(consultation.errors.count, "error") %> prohibited this consultation from being saved:</h2>

      <ul>
      <% consultation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :start_time, class: 'form-label' %>
      <%= form.datetime_field :start_time, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :end_time, class: 'form-label' %>
      <%= form.datetime_field :end_time, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if consultation.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', consultation, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-dark' %>

    <% if consultation.persisted? %>
      <%= link_to "Cancel", consultation, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", consultations_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
